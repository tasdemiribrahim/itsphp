function getAPI($siniflar=array())
{	
	echo "<h1>ITSPHP API</h1>";
	while(list(,$sinif)=each($siniflar))
	{
		$yeniSinif = new ReflectionClass($sinif);
		echo "<h2 style='color:red;'>".  $yeniSinif->getName() . "</h2><p>Yorum:</p><pre>" . $yeniSinif->getDocComment() . "</pre><p>Dosya:" .$yeniSinif->getFileName() . "<br />Satirlar:" . $yeniSinif->getStartLine() . " - " . $yeniSinif->getEndLine() . "</p>";
		getFuncAPI($yeniSinif->getMethods());
	}
	$funcs = get_defined_functions();
	getFuncAPI($funcs['user']);
}

function getFuncAPI($funcs)
{
	foreach ($funcs as $func) 
	{
		try{
			$func = new ReflectionFunction($func);
		} catch (ReflectionException $e) {}
		$prototype = $func->name . ' ( ';
		$args = array();
		foreach ($func->getParameters() as $param) 
		{
			$arg = '';
			if ($param->isPassedByReference()) 
				$arg = '&';
			if ($param->isOptional()) 
				$arg = '[' .$param->getName(). ' = ' .$param->getDefaultValue(). ']';
			else 
			$arg = $param->getName();
			$args[] = $arg;
		}
		$prototype .= implode(", ", $args) . ' )';
		echo "<h2>$prototype</h2><p>Yorum:</p><pre>" .$func->getDocComment(). "</pre><p>Dosya: " .$func->getFileName(). "<br />SatÄ±rlar: " .$func->getStartLine(). " - " .$func->getEndLine(). "</p>";
	}
}
